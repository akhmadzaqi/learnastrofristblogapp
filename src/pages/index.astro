---
// component imports
import MainLayout from "../layouts/MainLayout.astro";
import About from "../components/about.astro";
---

<MainLayout title="My Blog">
  <div class="container mx-auto">
    <div class="grid grid-cols-1 lg:grid-cols-2 lg:mt-20">
      <div class="m-14 text-center lg:text-left font-figtree">
        <h2 class="font-bold text-2xl text-blue-950 pb-1 lg:text-4xl">Akhmad Zaqi Noor.</h2>
        <h1 class="font-extrabold text-3xl lg:text-5xl lg:pb-3 text-transparent bg-clip-text bg-gradient-to-r from-[#FF35C6] to-[#FF8049]">
          Front-End Developer & Graphic Designer</h1>
        <p class="font-semilight pt-2 lg:text-lg"><span class="font-bold">Code & Graphic Designer</span>, it such a happiness for me. so, let me to help you!</p>
      </div>
      <div class="grid grid-cols-4 animate-wiggleVertical">
        <div class="scale-75 lg:-rotate-45 lg:translate-x-8" style={{ position: 'relative', zIndex: 1 }}>
          <img class="transition hover:rotate-45" src="/images/linkedin.png" alt="">
        </div>
        <div class="col-span-2 scale-125 ">
          <img src="/images/hero.png" alt="" srcset="">
        </div>
        <div class="scale-75 lg:rotate-45 lg:-translate-x-4">
          <img class="transition hover:-rotate-45" src="/images/tik.png" alt="">
        </div>
        <div class="col-span-2 w-1/2 scale-75 translate-x-6 -translate-y-14 -rotate-45 md:translate-x-14 md:-translate-y-14 lg:translate-x-10">
          <img class="transition hover:rotate-45" src="/images/instagram.png" alt="">
        </div>
        <div class="col-span-2 w-1/2 scale-75 translate-x-24 -translate-y-14 md:translate-x-44 lg:translate-x-32 sm:translate-x-56">
          <img class="transition hover:rotate-45 lg:translate-x-8" src="/images/youtube.png" alt="">
        </div>
      </div>
    </div>
  </div>
  <About/>
</MainLayout>